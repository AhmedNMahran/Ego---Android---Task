<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        tools:showIn="@layout/fragment_checkout"
>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/itemContainer"
            android:background="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView

                android:id="@+id/imgItem"
                tools:src="@mipmap/ic_launcher"
                android:layout_width="99dp" android:layout_height="70dp" android:maxWidth="100dp"
                android:maxHeight="100dp"/>

        <TextView
                android:id="@+id/tvItemName"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Angry Birds"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@+id/imgItem"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30 SAR"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/tvItemName"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>